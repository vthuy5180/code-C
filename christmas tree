#include<math.h>
#include <stdio.h>
#include <string.h>

     
int main()
{
    int n;
        scanf("%d", &n);
        int i,j;
   		for(i=1; i<=n; i++) {
            for(j=1;j<=n-i; j++) {
            printf(" ");
        }
        for(j=1; j<=2*i-1; j++) {
            printf("*");
        }
        printf("\n");
   		}
   		{
			for(int j=1;j<n;j++)
		{
			printf(" ");
		}
		for(int k=1;k<=1;k++)
		{
			printf("*");
		}
		printf("\n");
	}
}
